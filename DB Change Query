CREATE PROC [Customer].[spBalanceTransferFromWallet]
@CustomerId INT ,
@TransferToContactNumber BIGINT,
@TransferAmount decimal(18,4)

AS

BEGIN
INSERT INTO BalanceTransferFromWallet
VALUES(@CustomerId ,@TransferToContactNumber,@TransferAmount)
 
END




